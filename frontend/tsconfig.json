{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@routes/*": ["routes/*"],
      "@components/*": ["components/*"],
      "@types/*": ["types/*"]
    },
    "strict": true
  },
  "include": ["src"]
}


